<article class="post">
    <div class="title">
        <div class="info">
           <div class="postname">
             <a href="/post/{{id}}">{{title}}</a>
           </div>
           <div class="madeby">
            <p id="sub">Posted by <b>{{user.username}}</b></p>
           </div>
        
        </div>
        <div class="content">
            <p>{{content}}</p>
        </div>

    </div>
</article>